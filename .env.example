# Configurações do Ambiente NexIA
# Crie um arquivo .env com base neste exemplo

# Backend
BACKEND_PORT=3000
NODE_ENV=development

# Frontend 
VITE_API_URL=http://localhost:3000/api

# Banco de Dados MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=nexia_db

# Firebase
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=seu-projeto-firebase
FIREBASE_PRIVATE_KEY_ID=chave-privada-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@seu-projeto.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=id-do-cliente
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40seu-projeto.iam.gserviceaccount.com

# Firebase Client (Frontend)
VITE_FIREBASE_API_KEY=sua-api-key
VITE_FIREBASE_AUTH_DOMAIN=seu-projeto.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=seu-projeto
VITE_FIREBASE_STORAGE_BUCKET=seu-projeto.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=seu-sender-id
VITE_FIREBASE_APP_ID=seu-app-id

# OpenAI
OPENAI_API_KEY=sua-chave-api-openai

# Deepgram (Opcional, se usar para transcrição em tempo real)
DEEPGRAM_API_KEY=sua-chave-api-deepgram

# Configuração da Sessão
SESSION_SECRET=sua-chave-secreta-para-sessoes

# Configurações de Upload
MAX_UPLOAD_SIZE=10485760  # 10MB em bytes
UPLOAD_DIR=./uploads

# Configurações de CORS
CORS_ORIGIN=http://localhost:5173,https://sua-producao.com